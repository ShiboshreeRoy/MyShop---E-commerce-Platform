<div class="max-w-4xl mx-auto px-4 py-8 sm:px-6 lg:px-8">
  <div class="bg-white shadow-xl rounded-lg overflow-hidden">
    <div class="px-6 py-5 border-b border-gray-200">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="h-10 w-10 rounded-full bg-indigo-100 flex items-center justify-center">
            <svg class="h-6 w-6 text-indigo-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
          </div>
        </div>
        <div class="ml-4">
          <h2 class="text-2xl font-bold text-gray-900">Create Your Store</h2>
          <p class="mt-1 text-sm text-gray-500">
            Set up your online store and start selling products to customers worldwide.
          </p>
        </div>
      </div>
    </div>
    
    <div class="p-6">
      <div class="md:grid md:grid-cols-3 md:gap-6">
        <div class="md:col-span-1">
          <h3 class="text-lg font-medium leading-6 text-gray-900">Store Details</h3>
          <p class="mt-1 text-sm text-gray-500">
            Configure your store's basic information and appearance.
          </p>
        </div>
        <div class="mt-5 md:col-span-2 md:mt-0">
          <%= form_with(model: @store, local: true, multipart: true, class: "space-y-8 divide-y divide-gray-200") do |form| %>
            <% if @store.errors.any? %>
              <div class="rounded-lg bg-red-50 p-4 mb-6 border border-red-100">
                <div class="flex">
                  <div class="flex-shrink-0">
                    <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                    </svg>
                  </div>
                  <div class="ml-3">
                    <h3 class="text-sm font-medium text-red-800">
                      <%= pluralize(@store.errors.count, "error") %> prohibited this store from being saved:
                    </h3>
                    <div class="mt-2 text-sm text-red-700">
                      <ul class="list-disc space-y-1 pl-5">
                        <% @store.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                        <% end %>
                      </ul>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>

            <div class="space-y-6 sm:space-y-5">
              <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:border-t sm:border-gray-200 sm:pt-5">
                <%= form.label :name, class: "block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2" %>
                <div class="mt-1 sm:col-span-2 sm:mt-0">
                  <%= form.text_field :name, class: "block w-full max-w-lg  py-2 px-3 rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:max-w-xs sm:text-sm", placeholder: "Enter store name" %>
                </div>
              </div>

              <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:border-t sm:border-gray-200 sm:pt-5">
                <%= form.label :description, class: "block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2" %>
                <div class="mt-1 sm:col-span-2 sm:mt-0">
                  <%= form.text_area :description, rows: 4, class: "block w-full py-2 px-3 max-w-lg rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "Describe your store..." %>
                </div>
              </div>

              <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:border-t sm:border-gray-200 sm:pt-5">
                <%= form.label :theme, class: "block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2" %>
                <div class="mt-1 sm:col-span-2 sm:mt-0">
                  <%= form.select :theme, [['Default', 'default'], ['Modern', 'modern'], ['Minimal', 'minimal'], ['Dark', 'dark'], ['Vintage', 'vintage']], { prompt: 'Select a theme' }, { class: "block w-full max-w-lg py-2 px-3 rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:max-w-xs sm:text-sm" } %>
                </div>
              </div>

              <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:border-t sm:border-gray-200 sm:pt-5">
                <%= form.label :primary_color, class: "block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2" %>
                <div class="mt-1 sm:col-span-2 sm:mt-0">
                  <div class="flex items-center">
                    <%= form.color_field :primary_color, class: "h-10 w-16 rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
                    <span class="ml-3 text-sm text-gray-500 py-2 px-3 " ><%= @store.primary_color || '#4f46e5' %></span>
                  </div>
                </div>
              </div>

              <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:border-t sm:border-gray-200 sm:pt-5">
                <%= form.label :secondary_color, class: "block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2" %>
                <div class="mt-1 sm:col-span-2 sm:mt-0">
                  <div class="flex items-center">
                    <%= form.color_field :secondary_color, class: "h-10 w-16 rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
                    <span class="ml-3 text-sm text-gray-500 py-2 px-3 "><%= @store.secondary_color || '#f9fafb' %></span>
                  </div>
                </div>
              </div>

              <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:border-t sm:border-gray-200 sm:pt-5">
                <%= form.label :logo, class: "block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2" %>
                <div class="mt-1 sm:col-span-2 sm:mt-0">
                  <%= form.file_field :logo, class: " py-2 px-3 block w-full max-w-lg rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:max-w-xs sm:text-sm" %>
                  <p class="mt-1 text-sm text-gray-500">Upload a logo for your store (PNG, JPG, GIF up to 2MB)</p>
                </div>
              </div>

              <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:border-t sm:border-gray-200 sm:pt-5">
                <%= form.label :cover_image, class: "block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2" %>
                <div class="mt-1 sm:col-span-2 sm:mt-0">
                  <%= form.file_field :cover_image, class: " py-2 px-3 block w-full max-w-lg rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:max-w-xs sm:text-sm" %>
                  <p class="mt-1 text-sm text-gray-500">Upload a cover image for your store (PNG, JPG, GIF up to 5MB)</p>
                </div>
              </div>

              <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:border-t sm:border-gray-200 sm:pt-5">
                <%= form.label :visibility, class: "block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2" %>
                <div class="mt-1 sm:col-span-2 sm:mt-0">
                  <%= form.select :visibility, [['Public', 'public'], ['Private', 'private']], { prompt: 'Select visibility' }, { class: "block w-full py-2 px-3 max-w-lg rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:max-w-xs sm:text-sm" } %>
                  <p class="mt-1 text-sm text-gray-500">Choose who can see your store</p>
                </div>
              </div>

              <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:border-t sm:border-gray-200 sm:pt-5">
                <%= form.label :published, "Publish Store", class: "block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2" %>
                <div class="mt-1 sm:col-span-2 sm:mt-0">
                  <div class="flex items-center">
                    <%= form.check_box :published, class: "h-4 w-4 py-2 px-3 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
                    <label for="store_published" class="ml-2 block text-sm text-gray-900">Make store publicly visible</label>
                  </div>
                </div>
              </div>
            </div>

            <div class="pt-5">
              <div class="flex justify-end space-x-3">
                <%= link_to 'Cancel', stores_path, class: "rounded-md border border-gray-300 bg-white py-2 px-4 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
                <%= form.submit "Create Store", class: "inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>