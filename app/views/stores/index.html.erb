<div class="bg-white">
  <div class="max-w-2xl mx-auto pb-16 px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <h2 class="text-2xl font-bold tracking-tight text-gray-900">All Stores</h2>
    
    <% if user_signed_in? %>
      <div class="mt-4">
        <%= link_to 'Create New Store', new_store_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700" %>
      </div>
    <% end %>
    
    <div class="mt-6 grid grid-cols-1 gap-y-10 gap-x-6 sm:grid-cols-2 lg:grid-cols-4 xl:gap-x-8">
      <% @stores.each do |store| %>
        <div class="group relative bg-white border border-gray-200 rounded-lg shadow-sm">
          <div class="w-full min-h-80 aspect-w-1 aspect-h-1 rounded-md overflow-hidden group-hover:opacity-75 lg:h-80 lg:aspect-none">
            <div class="bg-gray-200 border-2 border-dashed rounded-xl w-full h-48 flex items-center justify-center text-gray-500">
              Store Logo
            </div>
          </div>
          <div class="mt-4 px-4 pb-4">
            <h3 class="text-sm text-gray-700 font-medium">
              <%= link_to store.name, store_path(store) %>
            </h3>
            <p class="mt-1 text-sm text-gray-500 truncate"><%= store.description&.truncate(50) %></p>
            
            <div class="mt-4 flex justify-between">
              <%= link_to 'Visit Store', store_path(store), class: "inline-flex items-center px-3 py-1 border border-transparent text-xs font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700" %>
              
              <% if user_signed_in? && store.user == current_user %>
                <%= link_to 'Edit', edit_store_path(store), class: "inline-flex items-center px-3 py-1 border border-gray-300 text-xs font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
