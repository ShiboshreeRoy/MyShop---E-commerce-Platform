<div class="max-w-md mx-auto mt-10 p-6 bg-white shadow-md rounded-lg">
  <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">Reset Password</h2>
  
  <%= form_with(model: resource, as: resource_name, url: password_path(resource_name), local: true, class: "space-y-6") do |form| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= form.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>

    <div class="flex flex-col space-y-3">
      <%= form.submit "Send me password reset instructions", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      
      <div class="text-center text-sm text-gray-500 mt-4">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  <% end %>
</div>
