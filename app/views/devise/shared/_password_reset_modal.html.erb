<div data-controller="modal" data-modal-type-value="reset-password" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full hidden" id="reset-password-modal">
  <div class="relative top-20 mx-auto p-4 border w-11/12 md:w-1/3 rounded-md shadow-lg bg-white z-50" data-modal-target="modal" tabindex="-1">
    <div class="flex justify-between items-center pb-3">
      <h3 class="text-2xl font-bold text-gray-700">Reset Password</h3>
      <button data-action="click->modal#close" class="text-gray-500 hover:text-gray-700">
        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
    
    <%= form_with(url: password_path(:user), method: :post, local: true, class: "space-y-6") do |form| %>
      <div class="mb-4">
        <%= label_tag :user_email, "Email", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= email_field_tag :user_email, nil, autocomplete: "email", class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>

      <div class="flex flex-col space-y-3">
        <%= form.submit "Send me password reset instructions", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        
        <div class="text-center text-sm text-gray-500 mt-4">
          <a href="#" onclick="openLoginModal(); return false;" class="text-indigo-600 hover:text-indigo-500">Back to login</a>
        </div>
      </div>
    <% end %>
  </div>
</div>