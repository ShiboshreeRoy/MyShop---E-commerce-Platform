<!-- Hero Section -->
<div class="bg-gradient-to-r from-indigo-500 to-purple-600 py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h1 class="text-4xl font-extrabold tracking-tight text-white sm:text-5xl md:text-6xl">
        <span class="block">Start Your Online Store</span>
        <span class="block text-indigo-200 mt-2">with Shopify Clone</span>
      </h1>
      <p class="mt-3 max-w-md mx-auto text-base text-indigo-100 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
        Everything you need to sell online, ship orders, market to customers, and grow your business.
      </p>
      <div class="mt-5 max-w-md mx-auto sm:flex sm:justify-center md:mt-8">
        <div class="rounded-md shadow">
          <%= link_to 'Create Your Store', new_store_path, class: "w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-indigo-600 bg-white hover:bg-indigo-50 md:py-4 md:text-lg md:px-10" %>
        </div>
        <div class="mt-3 rounded-md shadow sm:mt-0 sm:ml-3">
          <%= link_to 'Browse Stores', stores_path, class: "w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-500 bg-opacity-60 hover:bg-opacity-70 md:py-4 md:text-lg md:px-10" %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Featured Products -->
<section class="py-12 bg-white sm:py-16 lg:py-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">Featured Products</h2>
      <p class="mt-3 max-w-2xl mx-auto text-xl text-gray-500 sm:mt-4">Discover amazing products from our sellers</p>
    </div>
    
    <div class="mt-12 grid gap-8 grid-cols-1 sm:grid-cols-2 lg:grid-cols-4">
      <% @featured_products.each do |product| %>
        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="aspect-w-3 aspect-h-4 bg-gray-200 overflow-hidden">
            <% if product.featured_image %>
              <%= image_tag url_for(product.featured_image), class: "w-full h-full object-cover" %>
            <% else %>
              <div class="bg-gray-200 border-2 border-dashed rounded-xl w-full h-48 flex items-center justify-center text-gray-500">
                No Image
              </div>
            <% end %>
          </div>
          <div class="p-4">
            <h3 class="text-lg font-medium text-gray-900 truncate"><%= product.name %></h3>
            <p class="mt-1 text-sm text-gray-500 truncate"><%= product.short_description&.truncate(50) || product.description&.truncate(50) %></p>
            <div class="mt-4 flex items-center justify-between">
              <p class="text-lg font-semibold text-gray-900">$<%= product.price %></p>
              <%= link_to 'View Details', product_path(product), class: "inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    
    <div class="mt-10 text-center">
      <%= link_to 'View All Products', products_path, class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700" %>
    </div>
  </div>
</section>

<!-- Featured Stores -->
<section class="py-12 bg-gray-50 sm:py-16 lg:py-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">Popular Stores</h2>
      <p class="mt-3 max-w-2xl mx-auto text-xl text-gray-500 sm:mt-4">Shop from trusted sellers</p>
    </div>
    
    <div class="mt-12 grid gap-8 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">
      <% @stores.each do |store| %>
        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="p-6">
            <div class="flex items-center">
              <% if store.logo.attached? %>
                <%= image_tag url_for(store.logo), class: "h-12 w-12 rounded-md object-contain" %>
              <% else %>
                <div class="bg-gray-200 border-2 border-dashed rounded-xl w-12 h-12 flex items-center justify-center text-gray-500">
                  <%= store.name.first.upcase %>
                </div>
              <% end %>
              <div class="ml-4">
                <h3 class="text-lg font-medium text-gray-900"><%= store.name %></h3>
                <p class="text-sm text-gray-500"><%= store.description&.truncate(60) %></p>
              </div>
            </div>
            <div class="mt-6">
              <%= link_to 'Visit Store', store_path(store), class: "w-full flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
