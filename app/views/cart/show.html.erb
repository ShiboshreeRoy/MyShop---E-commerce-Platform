<div class="bg-white">
  <div class="max-w-2xl mx-auto pb-16 px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <h1 class="text-3xl font-extrabold tracking-tight text-gray-900">Shopping Cart</h1>

    <% if @cart_items.any? %>
      <form class="mt-12 lg:grid lg:grid-cols-12 lg:gap-x-12 xl:gap-x-16">
        <div class="lg:col-span-8">
          <div class="border-b border-gray-200">
            <% @cart_items.each do |item| %>
              <div class="flex py-6 sm:py-10">
                <div class="flex-shrink-0">
                  <div class="h-24 w-24 overflow-hidden rounded-md border border-gray-200 bg-gray-200 border-2 border-dashed flex items-center justify-center text-gray-500">
                    Product Image
                  </div>
                </div>

                <div class="ml-4 flex flex-1 flex-col sm:ml-6">
                  <div>
                    <div class="flex justify-between sm:grid sm:grid-cols-2">
                      <div class="pr-1">
                        <h4 class="text-sm">
                          <%= link_to item.product_variant.display_name, product_path(item.product_variant.product), class: "font-medium text-gray-700 hover:text-gray-800" %>
                        </h4>
                        <p class="mt-1 text-sm text-gray-500"><%= item.product_variant.name %></p>
                      </div>
                      <p class="text-right text-sm font-medium text-gray-900">$<%= item.unit_price %></p>
                    </div>

                    <div class="mt-4 flex items-center sm:absolute sm:right-0 sm:top-0 sm:mt-0 sm:block">
                      <label for="quantity" class="sr-only">Quantity</label>
                      <%= form_with(url: update_item_cart_path(item.product_variant), method: :patch, local: true, class: "flex max-w-xs items-center border border-gray-300 rounded-md") do |form| %>
                        <%= form.number_field :quantity, value: item.quantity, min: 1, class: "w-full rounded-md border-gray-300 text-center text-sm focus:border-indigo-500 focus:ring-indigo-500", onchange: "this.form.submit()" %>
                      <% end %>

                      <%= button_to remove_item_cart_path(item.product_variant), method: :delete, class: "ml-4 text-sm font-medium text-indigo-600 hover:text-indigo-500 sm:mt-4" do %>
                        <span>Remove</span>
                      <% end %>
                    </div>
                  </div>

                  <div class="mt-4 flex flex-1 items-end justify-between text-sm">
                    <p class="text-gray-500">Qty <%= item.quantity %></p>

                    <p class="text-right text-sm font-medium text-gray-900">$<%= item.total_price %></p>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Order summary -->
        <div class="mt-10 lg:col-span-4 lg:mt-0">
          <div class="rounded-lg border border-gray-200 bg-gray-50 p-6 sm:p-8">
            <h2 class="text-lg font-medium text-gray-900">Order summary</h2>

            <dl class="mt-6 space-y-4">
              <div class="flex items-center justify-between">
                <dt class="text-sm text-gray-600">Subtotal</dt>
                <dd class="text-sm font-medium text-gray-900">$<%= @cart.subtotal %></dd>
              </div>
              <div class="flex items-center justify-between border-t border-gray-200 pt-4">
                <div class="flex items-center text-sm">
                  <label for="discount-code" class="font-medium text-gray-900">Discount code</label>
                </div>
                <div class="flex ml-4">
                  <%= form_with(url: '#', local: true, class: "flex items-center text-sm") do |form| %>
                    <%= form.text_field :discount_code, placeholder: "Discount code", class: "w-24 rounded-md border-gray-300 text-sm focus:border-indigo-500 focus:ring-indigo-500" %>
                    <%= form.submit "Apply", class: "ml-2 inline-block text-indigo-600 hover:text-indigo-500 text-sm font-medium" %>
                  <% end %>
                </div>
              </div>
              <div class="flex items-center justify-between border-t border-gray-200 pt-4">
                <dt class="text-base font-medium text-gray-900">Order total</dt>
                <dd class="text-base font-medium text-gray-900">$<%= @total %></dd>
              </div>
            </dl>

            <div class="mt-6">
              <%= link_to 'Checkout', checkout_path, class: "flex w-full items-center justify-center rounded-md border border-transparent bg-indigo-600 px-4 py-3 text-base font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 focus:ring-offset-gray-50" %>
            </div>

            <div class="mt-6 flex justify-center text-sm text-center text-gray-500">
              <p>
                or
                <%= link_to 'Continue Shopping', products_path, class: "text-indigo-600 font-medium hover:text-indigo-500" %>
              </p>
            </div>
          </div>
        </div>
      </form>
    <% else %>
      <div class="mt-12 text-center">
        <svg class="mx-auto h-16 w-16 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-2.5 5M7 13l2.5 5m7-5v6a2 2 0 01-2 2H9a2 2 0 01-2-2v-6m8 0V9a2 2 0 00-2-2H9a2 2 0 00-2 2v4.01" />
        </svg>
        <h3 class="mt-4 text-lg font-medium text-gray-900">Your cart is empty</h3>
        <p class="mt-1 text-gray-500">Start adding some products to your cart.</p>
        <div class="mt-6">
          <%= link_to 'Go Shopping', products_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
